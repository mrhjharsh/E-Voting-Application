<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detech_face">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_170"
        android:layout_marginBottom="@dimen/dim_10"
        app:lottie_rawRes="@raw/loginpage" />


    <ImageView
        android:id="@+id/image"
        android:src="@drawable/humanavtar"
        android:layout_marginTop="@dimen/dim_30"
        android:layout_marginLeft="@dimen/dim_30"
        android:layout_marginRight="@dimen/dim_30"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dim_10"

        android:layout_gravity="center"
        android:layout_height="@dimen/dim_300">

    </ImageView>
    <androidx.cardview.widget.CardView
        android:id="@+id/login"
        android:layout_width="@dimen/dim_250"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#131313"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Detect Face"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</LinearLayout>